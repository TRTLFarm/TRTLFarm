@page
@model WithdrawModel
@{
    ViewData["Title"] = "Withdraw TurtleCoin";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    @if (TempData["ERROR"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ERROR"].ToString()
        </div>
    }
    @if (TempData["SUCCESS"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SUCCESS"].ToString()
        </div>
    }
    <form id="change-password-form" method="post">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Input.WithdrawAddress"></label>
                <input asp-for="Input.WithdrawAddress" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.WithdrawAmount"></label>
                <input asp-for="Input.WithdrawAmount" class="form-control" />
            </div>
            <div class="form-group">
                <p>There is withdrawal fee of 5%. Minimum withdrawal amount is 20 TRTL</p>
            </div>
            <p>You will recieve estimated <span class="recieveAmout"></span> TRTL.</p>(Based on trtl.services fee and dev fee)
            <button type="submit" class="btn btn-default">Withdraw</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}   
